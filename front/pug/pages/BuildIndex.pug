.menu-test
    button.lng-btn en
.allwin__page#forecastPoster
    .welcome
        .welcome__container
            .welcome__left
                .welcome__bg
                .welcome__decor-wrap
                    .welcome__decor._cup
                        img(src="/img/welcome/cup.png" alt="Cup")
                    .welcome__decor._helmet
                        img(src="/img/welcome/helmet.png" alt="Helmet")
                    .welcome__decor._glove
                        img(src="/img/welcome/glove.png" alt="Glove")
                    .welcome__decor._sneaker
                        img(src="/img/welcome/sneaker.png" alt="Sneaker")
                    .welcome__decor._ball-top
                        img(src="/img/welcome/ball-top.png" alt="Ball top")
                    .welcome__decor._ball-bottom
                        img(src="/img/welcome/boll-bottom.png" alt="Ball bottom")
                    .welcome__decor._ball-center
                        img(src="/img/welcome/ball-center.png" alt="Ball center")
                    .welcome__decor._ball-top-right
                        img(src="/img/welcome/ball-top-right.png" alt="Ball top right")
                    .welcome__decor._mini-ball-left
                        img(src="/img/welcome/mini-ball-left.png" alt="Mini ball left")

            .welcome__wrap
                .welcome__title
                    .welcome__title-text(data-translate="welcomeTitle")
                    .welcome__sub(data-translate="ps") &#8203;
                .welcome__subtitle(data-translate="welcomeSub") &#8203;
                .welcome__text(data-translate="welcomeTxt") &#8203;
                a(href="/login/" role="button" data-translate="loginBtn" data-promo="forecast_poster_ua"
                    data-button="authBtn").welcome__btn.custom-btn.authBtn &#8203;
        .welcome__row(id="draggableContainer")
        .welcome__btns.hide
            img(src='img/welcome/btns.svg' alt='buttons')
        .welcome__btn.custom-btn.predictBtn.hide(role ="button" data-translate="eventsBtn" data-promo="forecast_poster_ua"
            data-button="addEventsBtn") &#8203;
        .welcome__switch
            .welcome__switch-btn
            .welcome__switch-text(data-translate="eventsBtn") &#8203;
        .welcome__bet
            .welcome__bet-txt #[span(data-translate="added") &#8203;] #[p #[span.counter &#8203;] #[span.events &#8203;]]
            a(href="/sports/sport/soccer/" role="button" data-translate="betBtn" data-promo="forecast_poster_ua"
                data-button="placeBetBtn").welcome__bet-btn.custom-btn &#8203;
    .detail
        .detail__container
            .detail__text(data-translate="attentionTxt") &#8203;
            details.custom-drop.detail__drop
              summary.custom-drop-title(data-translate="rulesDropTitle") &#8203;
              .custom-drop-txt
                .custom-drop-txt-wrap(data-translate="rulesDropTxt") &#8203;




